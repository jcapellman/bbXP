@model bbxp.web.Models.LoginViewModel

<div class="logincontent">
    <form asp-action="AttemptLogin" method="post">
        <h2>login to administration</h2>
        
        @if (!string.IsNullOrEmpty(Model.ErrorString))
        {
            <div class="error">
                @Model.ErrorString
            </div>
        }

        <div class="form-group">
            <input asp-for="Username" class="form-control center-block" placeholder="username" required autofocus />
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control center-block" type="password" placeholder="password" required />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">login</button>
        </div>
    </form>
</div>