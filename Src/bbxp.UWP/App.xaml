<Application
    x:Class="bbxp.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:bbxp.UWP"
    RequestedTheme="Dark">
    <Application.Resources>
        <Style TargetType="Grid" x:Key="GridPageBackground">
            <Setter Property="Background" Value="#2e2e2e" />
        </Style>

        <Style TargetType="TextBlock" x:Key="PostTitle">
            <Setter Property="Foreground" Value="#00CC00" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="WrapWholeWords" />
            <Setter Property="Margin" Value="10,5,5,5" />
        </Style>

        <Style TargetType="TextBlock" x:Key="PostDate">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,5,5" />
        </Style>

        <Style TargetType="TextBlock" x:Key="PageHeaderText">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,5,5,5" />
        </Style>

        <Style TargetType="TextBlock" x:Key="PostBody">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="10,5,5,5" />
            <Setter Property="TextWrapping" Value="WrapWholeWords" />
        </Style>
        
        <Style TargetType="Grid" x:Key="PostTitleGrid">
            <Setter Property="Background" Value="#202020" />
        </Style>

        <Style TargetType="WebView" x:Key="ContentView">
            <Setter Property="Margin" Value="10,10,10,10" />
        </Style>
    </Application.Resources>
</Application>