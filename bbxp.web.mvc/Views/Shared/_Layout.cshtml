@model bbxp.web.mvc.Models.Base.BaseViewModel

@using static bbxp.web.mvc.Common.VersionHelper;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Model.Config.SiteName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bbxp.web.mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">@Model.Config.SiteName</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">posts</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/postsearch/">search</a>
                        </li>

                        @if (!string.IsNullOrEmpty(Model.Config.NavBarGitHubURL))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href=@Model.Config.NavBarGitHubURL>github</a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.Config.NavBarTwitterURL))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href=@Model.Config.NavBarTwitterURL>twitter</a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.Config.NavBarLinkedInURL))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href=@Model.Config.NavBarLinkedInURL>linkedin</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/About_Me">about me</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white">        
        <p>
            @Model.Config.FooterNotice<br />
            <a href="http://github.com/jcapellman/bbxp" target="_blank">bbXP (@GetAssemblyVersion())</a>
        </p>        
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
