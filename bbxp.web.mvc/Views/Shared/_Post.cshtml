@using bbxp.web.mvc.Common;

@model PostViewModel

<div class="post">
    <div class="date">@Model.Post.PostDate.ToLongDateString()</div>
    <h2 class="header"><a href="@Model.Post.URL">@Model.Post.Title</a></h2>
    <h2><span class="badge bg-white text-white"><a href="#@Model.Post.Id">Comments</a></span></h2>
    <div class="postbody">@Model.Post.Body.ToHtmlString()</div>

    <div class="commentbox" id="@Model.Post.Id"></div>
    <script src="https://unpkg.com/commentbox.io/dist/commentBox.min.js"></script>
    <script>commentBox('5717696712802304-proj', { textColor: '#fff' })</script>
</div>